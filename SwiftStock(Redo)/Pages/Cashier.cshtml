@page
@model AlfaMart.Pages.CashierModel
@{
    ViewData["Title"] = "Cashier POS";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cashier POS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 text-gray-900">

    <header class="bg-red-600 text-white p-4 text-center text-2xl">
        SwiftStock
    </header>

    <div class="flex">
        <nav class="bg-gray-200 w-64 p-4">
            <h3 class="text-lg font-bold mb-4">Cashier Panel</h3>
            <a href="#pos" class="block py-2 px-4 mb-2 text-gray-900 hover:bg-yellow-300">Cashier POS</a>
            <a href="#inventory" class="block py-2 px-4 mb-2 text-gray-900 hover:bg-yellow-300">Inventory</a>
            <a href="#history" class="block py-2 px-4 mb-2 text-gray-900 hover:bg-yellow-300">Transaction History</a>
            <button class="w-full bg-yellow-500 text-black py-2 mt-4" onclick="logout()">Logout</button>
        </nav>

        <div class="flex-grow p-8">
            <div id="pos" class="section">
                <h2 class="text-2xl mb-4">Cashier POS</h2>
                <div class="bg-white p-4 rounded shadow-md">
                    <p>Payment processing and sales functionality will be implemented here.</p>
                </div>
            </div>

            <div id="inventory" class="section hidden">
                <h2 class="text-2xl mb-4">Inventory</h2>
                <div class="bg-white p-4 rounded shadow-md">
                    <p>View inventory here. Read-only.</p>
                </div>
            </div>

            <div id="history" class="section hidden">
                <h2 class="text-2xl mb-4">Transaction History</h2>
                <div class="bg-white p-4 rounded shadow-md">
                    <p>View transaction history here. Read-only.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showSection(section) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(sec => {
                sec.classList.add('hidden');
            });
            // Show the selected section
            document.getElementById(section).classList.remove('hidden');
        }

        function logout() {
            // Logic to logout user (e.g., redirect to login page)
            window.location.href = '/Login'; // Adjust according to your routing
        }

        // Load the POS section by default
        document.addEventListener('DOMContentLoaded', (event) => {
            showSection('pos');
        });
    </script>

</body>
</html>
