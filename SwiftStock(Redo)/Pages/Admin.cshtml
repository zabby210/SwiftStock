@page
@model AlfaMart.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100 text-gray-900">

    <header class="bg-red-600 text-white p-4 text-center text-2xl">
        SwiftStock
    </header>

    <div class="flex">
        <nav class="bg-gray-200 w-64 p-4">
            <h3 class="text-lg font-bold mb-4">Admin Panel</h3>
            <a href="javascript:void(0);" onclick="showSection('dashboard')" class="block py-2 px-4 mb-2 text-gray-900 hover:bg-yellow-300">Dashboard</a>
            <a href="javascript:void(0);" onclick="showSection('sales')" class="block py-2 px-4 mb-2 text-gray-900 hover:bg-yellow-300">Sales</a>
            <a href="javascript:void(0);" onclick="showSection('inventory')" class="block py-2 px-4 mb-2 text-gray-900 hover:bg-yellow-300">Inventory</a>
            <a href="javascript:void(0);" onclick="showSection('history')" class="block py-2 px-4 mb-2 text-gray-900 hover:bg-yellow-300">History</a>
            <form method="post" asp-page-handler="Logout">
                <button type="submit" class="w-full bg-yellow-500 text-black py-2 mt-4">Logout</button>
            </form>
        </nav>

        <div class="flex-grow p-8">
            <div id="dashboard" class="section">
                <h2 class="text-2xl mb-4">Dashboard</h2>
                <div class="bg-white p-4 rounded shadow-md">
                    <div class="chart" id="dashboardChart"></div>
                </div>
            </div>

            <div id="sales" class="section hidden">
                <h2 class="text-2xl mb-4">Sales</h2>
                <a asp-page="/Sales" class="text-blue-500 hover:underline">View Sales</a>
            </div>

            <div id="inventory" class="section hidden">
                <h2 class="text-2xl mb-4">Inventory Management</h2>
                <iframe src="/Inventory" class="w-full h-96 border rounded"></iframe>
            </div>

            <div id="history" class="section hidden">
                <h2 class="text-2xl mb-4">Transaction History</h2>
                <div class="bg-white p-4 rounded shadow-md">
                    <p>Transaction data will be displayed here.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showSection(section) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(sec => {
                sec.classList.add('hidden');
            });
            // Show the selected section
            document.getElementById(section).classList.remove('hidden');
        }

        // Load the dashboard section by default
        document.addEventListener('DOMContentLoaded', (event) => {
            showSection('dashboard');
        });

        // Check for access denied response
        fetch(window.location.href)
            .then(response => response.json())
            .then(data => {
                if (data.accessDenied) {
                    alert(data.message);
                    window.location.href = "/Login";
                }
            })
            .catch(error => console.error('Error:', error));
    </script>

</body>
</html>

