@page
@model AlfaMart.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column; /* Arrange children in a column */
            height: 100vh; /* Full viewport height */
        }

        header {
            background-color: red;
            color: white;
            padding: 20px;
            text-align: center;
            font-size: 24px;
            flex: 0 0 60px; /* Fixed height for header */
        }

        nav {
            height: calc(100% - 60px); /* Fill remaining height below header */
            width: 200px;
            background-color: #f0f0f0; /* Light background for nav */
            padding: 15px;
            color: black;
            position: fixed;
            top: 60px; /* Below the header */
            bottom: 0; /* Extend to the bottom */
        }

            nav a {
                color: black;
                padding: 14px 20px;
                text-decoration: none;
                display: block;
                margin-bottom: 5px;
            }

                nav a:hover {
                    background-color: yellow;
                    color: black;
                }

        .container {
            margin-left: 220px; /* Space for the sidebar */
            padding: 20px;
            flex-grow: 1; /* Allow this area to grow */
            overflow-y: auto; /* Allow scroll if necessary */
            transition: margin-left 0.3s; /* Smooth transition for responsiveness */
        }

        h2 {
            margin: 20px 0;
        }

        .chart {
            width: 100%;
            height: 400px;
            background-color: #f4f4f4; /* Placeholder for charts */
            border: 1px solid #ccc;
            margin-bottom: 20px;
        }

        .card {
            background-color: #ffffff;
            border: 1px solid #ddd;
            padding: 20px;
            margin-top: 20px;
        }

        .logout-button {
            background-color: yellow;
            color: black;
            border: none;
            padding: 10px;
            cursor: pointer;
            margin-top: 20px;
            width: 100%;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <header>
        SwiftStock
    </header>

    <nav>
        <h3>Admin Panel</h3>
        <a href="#dashboard" onclick="showSection('dashboard')">Dashboard</a>
        <a href="#sales" onclick="showSection('sales')">Sales</a>
        <a href="#inventory" onclick="showSection('inventory')">Inventory</a>
        <a href="#history" onclick="showSection('history')">History</a>
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="logout-button">Logout</button>
        </form>
    </nav>

    <div class="container">
        <div id="dashboard" class="section">
            <h2>Dashboard</h2>
            <div class="chart" id="dashboardChart"></div>
        </div>

        <div id="sales" class="section" style="display:none;">
            <h2>Sales</h2>
            <div class="chart" id="salesChart"></div>
        </div>

        <div id="inventory" class="section" style="display:none;">
            <h2>Inventory Management</h2>
            <iframe src="/Inventory"></iframe>
        </div>

        <div id="history" class="section" style="display:none;">
            <h2>Transaction History</h2>
            <div class="card">
                <p>Transaction data will be displayed here.</p>
                <!-- Add your history logic here -->
            </div>
        </div>
    </div>

    <script>
        function showSection(section) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(sec => {
                sec.style.display = 'none';
            });
            // Show the selected section
            document.getElementById(section).style.display = 'block';
        }

        // Load the dashboard section by default
        document.addEventListener('DOMContentLoaded', (event) => {
            showSection('dashboard');
        });
    </script>

</body>
</html>
