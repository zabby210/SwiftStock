@page
@using SwiftStock.Pages
@model IndexModel

<!-- Hero Section -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden py-20 px-4">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-1/4 -left-1/4 w-1/2 h-1/2 bg-[#E31837]/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-1/4 -right-1/4 w-1/2 h-1/2 bg-[#003C7E]/5 rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto text-center">
        <div class="flex items-center justify-center mb-6" data-aos="fade-down">
               <img src="~/css/Images/SwiftLogo.png" alt="Logo" class="h-16 md:h-20 mr-4">
            <h1 class="text-4xl md:text-7xl font-bold text-white text-shadow">
                SwiftStock
            </h1>
        </div>
        <p class="text-slate-400 max-w-2xl mx-auto text-lg md:text-xl mb-12 leading-relaxed" data-aos="fade-up" data-aos-delay="100">
            Experience the next generation of inventory management, designed exclusively for Alfamart stores.
        </p>

<div class="flex flex-col sm:flex-row gap-4 justify-center items-center" data-aos="fade-up" data-aos-delay="200">
    <a href="/Login" class="w-full sm:w-auto bg-[#E31837] text-white py-3 px-4 rounded-lg font-medium 
                       hover:bg-[#E31837]/90 transition-all duration-300 focus-ring flex items-center justify-center gap-2">
        <i class="fas fa-sign-in-alt"></i>
        Login
                </span>
            </a>
            <a href="#features" class="w-full sm:w-auto bg-[#161922] px-8 py-4 rounded-lg font-medium hover:bg-[#1c1f2a] transition-all duration-300 flex items-center justify-center gap-2 focus-ring">
                <i class="fas fa-info-circle"></i> Learn More
            </a>
        </div>

        <!-- Statistics -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-16" data-aos="fade-up" data-aos-delay="300">
            <div class="glass-card p-6 rounded-lg">
         
                <div class="text-sm text-slate-400">Stores Connected</div>
            </div>
            <div class="glass-card p-6 rounded-lg">
           
                <div class="text-sm text-slate-400">Products Tracked</div>
            </div>
            <div class="glass-card p-6 rounded-lg">
               
                <div class="text-sm text-slate-400">Real-time Updates</div>
            </div>
            <div class="glass-card p-6 rounded-lg">
                
                <div class="text-sm text-slate-400">System Uptime</div>
            </div>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <a href="#features" class="text-slate-400 hover:text-white transition-colors duration-300">
            <i class="fas fa-chevron-down text-2xl"></i>
            <span class="sr-only">Scroll down</span>
        </a>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-32 px-4 bg-[#161922]">
    <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl font-bold text-center mb-4 text-white" data-aos="fade-up">
            Complete Store Management
        </h2>
        <p class="text-slate-400 text-center max-w-2xl mx-auto mb-20" data-aos="fade-up" data-aos-delay="100">
            Streamline your Alfamart operations with our comprehensive suite of management tools
        </p>

        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            <!-- Admin Features -->
            <div class="glass-card p-8 rounded-xl hover-up" data-aos="fade-up" data-aos-delay="200">
                <div class="w-14 h-14 rounded-lg bg-[#E31837]/10 flex items-center justify-center mb-6">
                    <i class="fas fa-user-shield text-[#E31837] text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4 text-white">Admin Dashboard</h3>
                <p class="text-slate-400 mb-4">Comprehensive control over inventory, staff management, and store operations.</p>
                <ul class="space-y-2 text-sm text-slate-400">
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#E31837] mr-2"></i>
                        Multi-store inventory monitoring
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#E31837] mr-2"></i>
                        Staff performance metrics
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#E31837] mr-2"></i>
                        Financial reporting & analytics
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#E31837] mr-2"></i>
                        Automated reorder management
                    </li>
                </ul>
            </div>

            <!-- Staff Features -->
            <div class="glass-card p-8 rounded-xl hover-up" data-aos="fade-up" data-aos-delay="300">
                <div class="w-14 h-14 rounded-lg bg-[#003C7E]/10 flex items-center justify-center mb-6">
                    <i class="fas fa-users-cog text-[#003C7E] text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4 text-white">Staff Tools</h3>
                <p class="text-slate-400 mb-4">Efficient tools for daily store operations and inventory management.</p>
                <ul class="space-y-2 text-sm text-slate-400">
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#003C7E] mr-2"></i>
                        Mobile inventory scanning
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#003C7E] mr-2"></i>
                        Stock level alerts
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#003C7E] mr-2"></i>
                        Shelf management system
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#003C7E] mr-2"></i>
                        Task assignment tracking
                    </li>
                </ul>
            </div>

            <!-- Customer Features -->
            <div class="glass-card p-8 rounded-xl hover-up" data-aos="fade-up" data-aos-delay="400">
                <div class="w-14 h-14 rounded-lg bg-[#FFD700]/10 flex items-center justify-center mb-6">
                    <i class="fas fa-store text-[#FFD700] text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4 text-white">Customer Portal</h3>
                <p class="text-slate-400 mb-4">Enhanced shopping experience for Alfamart customers.</p>
                <ul class="space-y-2 text-sm text-slate-400">
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#FFD700] mr-2"></i>
                        Real-time stock checking
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#FFD700] mr-2"></i>
                        Price comparisons
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-[#FFD700] mr-2"></i>
                        Product availability alerts
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

