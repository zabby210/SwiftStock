@page
@model SwiftStock.Pages.A_StaffModel
@{
    ViewData["Title"] = "Staff Management";
    Layout = "_AdminLayout";
}

<div class="space-y-4">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-white">Staff Management</h1>
            <p class="text-slate-400 text-sm">View and manage staff accounts</p>
        </div>
        <a href="/A_RegisterStaff" class="btn-primary">
            <i class="fas fa-plus mr-2"></i>Register New Staff
        </a>
    </div>

    <!-- Staff Table -->
    <div class="glass-card rounded-lg overflow-hidden">
        <div class="p-3 border-b border-slate-800">
            <div class="flex items-center justify-between">
                <h3 class="text-base font-semibold text-white">Staff List</h3>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left bg-[#0f1117]">
                        <th class="px-4 py-2 text-xs font-semibold text-slate-400">ID</th>
                        <th class="px-4 py-2 text-xs font-semibold text-slate-400">Name</th>
                        <th class="px-4 py-2 text-xs font-semibold text-slate-400">Username</th>
                        <th class="px-4 py-2 text-xs font-semibold text-slate-400">Email</th>
                        <th class="px-4 py-2 text-xs font-semibold text-slate-400">Role</th>
                        <th class="px-4 py-2 text-xs font-semibold text-slate-400">Password</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-800">
                    @foreach (var staff in Model.Staff)
                    {
                        <tr class="hover:bg-[#0f1117]/50">
                            <td class="px-4 py-2 text-sm">@staff.Id</td>
                            <td class="px-4 py-2 text-sm">@staff.Name</td>
                            <td class="px-4 py-2 text-sm">@staff.Username</td>
                            <td class="px-4 py-2 text-sm">@staff.Email</td>
                            <td class="px-4 py-2 text-sm">
                                <span class="px-2 py-1 text-xs rounded-full @(staff.Role == "Admin" ? "bg-purple-500/20 text-purple-400" : "bg-blue-500/20 text-blue-400")">
                                    @staff.Role
                                </span>
                            </td>
                            <td class="px-4 py-2 text-sm">
                                <span class="font-mono">••••••••</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
