@page
@model AlfaMart.Pages.InventoryModel
@{
    ViewData["Title"] = "Inventory Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="bg-gray-900 text-white">

    <header class="flex justify-between items-center p-4 bg-red-600">
        <div class="logo text-2xl font-bold">SwiftStock</div>
        <nav>
            <a href="/" class="text-white hover:text-yellow-300">Home</a>
        </nav>
    </header>

    <main class="flex flex-col items-center justify-center h-screen">
        <h2 class="text-3xl mb-4">Inventory Management</h2>
        <table class="table-auto w-full bg-white text-gray-900 rounded shadow-md">
            <thead>
                <tr>
                    <th class="px-4 py-2">Product Name</th>
                    <th class="px-4 py-2">Stock</th>
                    <th class="px-4 py-2">Price</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.InventoryItems)
                {
                    <tr>
                        <td class="border px-4 py-2">@item.Product_Name</td>
                        <td class="border px-4 py-2">@item.Stock</td>
                        <td class="border px-4 py-2">@item.Price</td>
                        <td class="border px-4 py-2">
                            <a asp-page="/Inventory/Edit" asp-route-id="@item.Id" class="text-blue-500 hover:underline">Edit</a> |
                            <a asp-page="/Inventory/Delete" asp-route-id="@item.Id" class="text-red-500 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-page="/Inventory/Create" class="mt-4 bg-yellow-500 text-black py-2 px-4 rounded hover:bg-yellow-600">Add New Item</a>
    </main>

</body>
</html>
